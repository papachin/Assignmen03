
    <%= form_for(@gym_class, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :classname %>
      <%= f.text_field :classname, class: 'form-control' %>

      <%= f.label :day %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :time %>
      <%= f.text_field :password, class: 'form-control' %>

      <%= f.label :instructor %>
      <%= f.text_field :instructor, class: 'form-control' %>
      
      <%= f.label :startdate %>
      <%= f.text_field :startdate, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>